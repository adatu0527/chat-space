        =link_to edit_user_path(current_user.id) , class: "side-header__box__menu__icon1 side-header__box__menu__icon1--edit" do
          = fa_icon 'cog', class:"side-header__box__menu__icon1--icon"

      %li.side-header__box__menu__list  
        =link_to new_group_path , class: "side-header__box__menu__icon2 side-header__box__menu__icon2--edit" do
          = fa_icon 'edit' , class:"side-header__box__menu__icon2--icon"