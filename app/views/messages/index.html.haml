.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__crrent-group
        = @group.name
      .main-header__left-box__menbar-list
        .menbar
          Menbar:
        -@group.users.each do |user|
          .menbars
            %chat-header__user= user.name


        
    .main-header__right-box
      =link_to edit_group_path(@group) do
        .main-header__right-box__edit-btm
          Edit
  .messages
    = render @messages
